name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: "name of the source data file to be cleaned"
        type: string

      output_artifact:
        description: "name of the output data file after cleaning"
        type: string

      output_type:
        description: "the type for the output_artifact"
        type: string

      output_type:
        description: "the type for the output_artifact"
        type: string

      min_price:
        description: "the min price to consider"
        type: float

      max_price:
        description: "the max price to consider"
        type: float



    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type} --min_price {min_price}  --max_price {max_price} 

